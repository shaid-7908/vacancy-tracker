<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Location Picker by PIN Code</title>

  <!-- Leaflet CSS -->
  <link
    rel="stylesheet"
    href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    crossorigin=""
  />

  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    input, button {
      display: block;
      margin-bottom: 10px;
      padding: 8px;
      width: 250px;
    }
    #map {
      height: 400px;
      margin-top: 20px;
    }
  </style>
</head>
<body>

  <h2>Enter PIN Code and Select Exact Location</h2>

  <form id="locationForm">
    <input type="text" id="pincode" placeholder="Enter your PIN code" />
    <input type="text" id="state" placeholder="State" readonly />
    <input type="text" id="city" placeholder="City" readonly />
    <input type="hidden" id="latitude" name="latitude">
    <input type="hidden" id="longitude" name="longitude">
    <button type="button" onclick="loadMap()">Load Map</button>
  </form>

  <div id="map"></div>

  <!-- Leaflet JS -->
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>

  <script>
    let map, marker;

    // Fetch city/state from India PIN API
    document.getElementById("pincode").addEventListener("blur", async function () {
      const pincode = this.value.trim();

      if (!/^\d{6}$/.test(pincode)) {
        alert("Please enter a valid 6-digit PIN code.");
        return;
      }

      try {
        const response = await fetch(`https://api.postalpincode.in/pincode/${pincode}`);
        const data = await response.json();
        const postOffice = data?.[0]?.PostOffice?.[0];

        if (postOffice) {
          document.getElementById("city").value = postOffice.District;
          document.getElementById("state").value = postOffice.State;
        } else {
          alert("No location data found for this PIN code.");
        }
      } catch (err) {
        console.error("Error fetching location data:", err);
        alert("Failed to retrieve city/state details.");
      }
    });

    // Get latitude/longitude from PIN using Nominatim (OpenStreetMap)
    async function getCoordsFromPincode(pincode) {
      const res = await fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${pincode}, India`);
      const data = await res.json();

      if (data.length > 0) {
        return {
          lat: parseFloat(data[0].lat),
          lng: parseFloat(data[0].lon)
        };
      } else {
        throw new Error("Could not find coordinates for this PIN code.");
      }
    }

    // Load map and allow location selection
    async function loadMap() {
      const pincode = document.getElementById("pincode").value.trim();

      if (!/^\d{6}$/.test(pincode)) {
        alert("Please enter a valid 6-digit PIN code.");
        return;
      }

      try {
        const { lat, lng } = await getCoordsFromPincode(pincode);

        if (!map) {
          map = L.map('map').setView([lat, lng], 13);
          L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19
          }).addTo(map);

          map.on('click', function (e) {
            const { lat, lng } = e.latlng;
            if (marker) marker.remove();
            marker = L.marker([lat, lng]).addTo(map);
            document.getElementById("latitude").value = lat;
            document.getElementById("longitude").value = lng;
          });
        } else {
          map.setView([lat, lng], 13);
        }
      } catch (err) {
        console.error("Error loading map:", err);
        alert(err.message);
      }
    }
  </script>

</body>
</html>
